# PostgreSQL Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
POSTGRES_DB=testdb

# Port Configuration
POSTGRES_PRIMARY_PORT=5433
POSTGRES_REPLICA_PORT=5434
ADMINER_PORT=8081

# Mode Configuration
PG_MODE=primary
RESTORE_FROM_BACKUP=true

# Backup Configuration
PGBACKREST_STANZA=main
PGBACKREST_PROCESS_MAX=2

# S3 Configuration - CONFIGURE SEUS VALORES AQUI
PGBACKREST_S3_BUCKET=your-bucket-name
PGBACKREST_S3_ENDPOINT=s3.amazonaws.com
PGBACKREST_S3_REGION=us-east-1
PGBACKREST_S3_ACCESS_KEY=your-access-key
PGBACKREST_S3_SECRET_KEY=your-secret-key
PGBACKREST_S3_PATH=/pgbackrest

# Retention Configuration
RETENTION_FULL=3
RETENTION_DIFF=14
RETENTION_ARCHIVE=2

# PostgreSQL Performance Configuration
SHARED_BUFFERS=1GB
EFFECTIVE_CACHE_SIZE=3GB
MAINTENANCE_WORK_MEM=256MB
WORK_MEM=16MB
MAX_WAL_SENDERS=10
MAX_REPLICATION_SLOTS=10
