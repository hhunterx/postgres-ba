# Scenario 1: First Start (New Database)
# Tests: New DB creation with pgBackRest stanza and initial backup

POSTGRES_USER=postgres
POSTGRES_PASSWORD=testpass123
POSTGRES_DB=testdb

# pgBackRest Configuration
PGBACKREST_STANZA=test-scenario1

# S3 Configuration (using MinIO)
PGBACKREST_S3_BUCKET=pgbackrest
PGBACKREST_S3_ENDPOINT=minio:9000
PGBACKREST_S3_REGION=us-east-1
PGBACKREST_S3_ACCESS_KEY=minioadmin
PGBACKREST_S3_SECRET_KEY=minioadmin
PGBACKREST_S3_PATH=/backup/scenario1

# MinIO specific settings
PGBACKREST_S3_URI_STYLE=path
PGBACKREST_S3_VERIFY_TLS=n